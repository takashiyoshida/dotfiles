#!/bin/bash

set -e

function help
{
    echo "Usage:"
    echo "$(basename $0) [-h]"
    echo
    echo "Options:"
    echo "-h     Print this help message"
    echo
    echo "$(basename $0) extracts RTUREP progress per feature from JIRA"
    exit 0
}

